@model LoginModel
@{

        Layout = "_AccountLayout";
    }

<section class="h-100 gradient-form" style="background-color: #e83e8c;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="~/Content/Images/small steps logo.PNG" style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1" style=" font-family: Georgia, serif;"> <b>Do Small things, with great Love </b></h4>
                                </div>


                                <div class="text-danger" asp-validation-summary="All"></div>
                                <form asp-action="Login" asp-controller="Account" method="post">
                                    <input type="hidden" asp-for="ReturnUrl" />
                                    <p style=" font-family: Georgia, serif;">Please login to your account</p>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Name" class="form-control" placeholder="Phone number or email address" />
                                        <div><span asp-validation-for="Name" class="text-danger"></span></div>
                                        <label class="form-label" for="form2Example11" style=" font-family: Georgia, serif;">Username</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Password" class="form-control" />
                                        <div><span asp-validation-for="Password" class="text-danger"></span></div>
                                        <label class="form-label" for="form2Example22" style=" font-family: Georgia, serif;">Password</label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" style="background-color: #6f42c1;  font-family: Georgia, serif;" type="submit">Log in</button>
                                        <a class="text-muted" href="#!" style=" font-family: Georgia, serif;">Forgot password?</a>
                                        @*<p class="mb-0 me-2" style=" font-family: Georgia, serif;">Don't have an account?</p>
                                        <button type="button" class="btn btn-outline-info" style=" font-family: Georgia, serif;">Create new</button>*@
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center pb-4">

                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2" style="background-color:deepskyblue">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h3 class="mb-4" style=" font-family: Georgia, serif;">We are more than just a Creche, we are family!!</h3>
                                <h4 class="mb-4" style=" font-family: Georgia, serif;">
                                    traditional creche experience? Nah that’s old news!!
                                </h4>
                                <p class="small mb-0" style=" font-family: Georgia, serif;">Being physically present in a creche isn’t the only learning option anymore, not with the rise of the internet and new technologies, at least. Nowadays, you have access to a quality education whenever and wherever you want, as long as you have access to a computer. .</p>
                                <br />
                                <p>
                                    Small Steps is actually there to enable the Teacher and the Pupil to set their own learning pace.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



