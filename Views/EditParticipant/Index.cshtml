@model IEnumerable<Participant>

<!--form for a searchbox-->


<table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-right">ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Address</th>
            <th>Email</th>
            <th>CellPhone Number</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">@item.ParticipantID</td>
                <td>@item.Name</td>
                <td class="text-left">@item.Surname</td>
                <td class="text-left">@item.Address</td>
                <td class="text-left">@item.Email</td>
                <td class="text-left">@item.CellNumber</td>
                <td class="text-left">@item.Role</td>
                <td class="text-center">
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm @*btn-warning*@" style="background-color: deepskyblue"
                           asp-route-participantId="@item.ParticipantID">
                            Edit
                        </a>
                        <input type="hidden" name="ParticipantID" value="@item.ParticipantID" />
                        <button type="submit" class="btn @*btn-danger*@ btn-sm" style="background-color: #e83e8c">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="text-center">
        <a asp-action="Create" class="btn @*btn-primary*@" style="background-color: #6f42c1">Add Participant</a>
    </div>
